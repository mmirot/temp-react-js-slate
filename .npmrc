
# Since package.json is read-only, we define scripts here
# These can be run with npm run <script-name>
scripts.start = "vite --port 8080"
scripts.dev = "vite --port 8080"
scripts.preview = "vite preview --port 8080"
scripts.build = "vite build"
scripts.build:dev = "vite build --mode development"
scripts.serve = "vite preview --port 8080"

# Ensuring ESM support
type = "module"
